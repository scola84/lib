{
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": [
      "error",
      "always"
    ],
    "array-bracket-newline": [
      "error",
      "consistent"
    ],
    "array-element-newline": [
      "error",
      "consistent"
    ],
    "capitalized-comments": "off",
    "class-methods-use-this": "off",
    "func-style": [
      "error",
      "declaration"
    ],
    "function-call-argument-newline": "off",
    "lines-around-comment": "off",
    "max-len": "off",
    "max-lines": "off",
    "max-params": "off",
    "max-statements": "off",
    "multiline-comment-style": "off",
    "multiline-ternary": "off",
    "no-empty-function": "off",
    "no-extra-parens": "off",
    "no-magic-numbers": "off",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 0
      }
    ],
    "no-ternary": "off",
    "no-undefined": "off",
    "no-unused-vars": [
      "error",
      {
        "vars": "local"
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "*",
        "next": "block-like"
      },
      {
        "blankLine": "always",
        "prev": "block-like",
        "next": "*"
      },
      {
        "blankLine": "always",
        "prev": [
          "const",
          "expression",
          "let"
        ],
        "next": "*"
      },
      {
        "blankLine": "never",
        "prev": [
          "const",
          "let"
        ],
        "next": [
          "const",
          "let"
        ]
      },
      {
        "blankLine": "never",
        "prev": [
          "expression"
        ],
        "next": [
          "expression"
        ]
      },
      {
        "blankLine": "never",
        "prev": [
          "const",
          "expression",
          "let"
        ],
        "next": [
          "break",
          "return",
          "throw"
        ]
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": "import"
      },
      {
        "blankLine": "always",
        "prev": "import",
        "next": "*"
      },
      {
        "blankLine": "never",
        "prev": "import",
        "next": "import"
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": [
          "multiline-const",
          "multiline-expression",
          "multiline-let"
        ]
      },
      {
        "blankLine": "always",
        "prev": [
          "multiline-const",
          "multiline-expression",
          "multiline-let"
        ],
        "next": "*"
      }
    ],
    "quote-props": [
      "error",
      "consistent"
    ],
    "require-atomic-updates": "off"
  }
}
