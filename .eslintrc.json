{
  "overrides": [
    {
      "extends": [
        "eslint:all",
        "standard",
        ".eslint/js.json"
      ],
      "files": [
        "**/*.js"
      ],
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "extends": [
        "eslint:all",
        "plugin:@typescript-eslint/all",
        "standard-with-typescript",
        ".eslint/js.json",
        ".eslint/ts.json"
      ],
      "files": [
        "**/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "tsconfig.json",
        "sourceType": "module"
      }
    }
  ]
}
