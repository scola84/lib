{
  "author": "M.C. van den Boogaart <scola@kvdb.name>",
  "bin": {
    "scola": "./bin/scola.js"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browser": "./dist/client/umd.js",
  "dependencies": {
    "@rmp135/sql-ts": "^1.8.2",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/lodash": "^4.14.168",
    "@types/micromatch": "^4.0.1",
    "@types/mssql": "^6.0.8",
    "@types/mysql": "^2.15.18",
    "@types/node-schedule": "^1.3.1",
    "@types/pg": "^7.14.11",
    "@types/pg-format": "^1.0.1",
    "@types/pino": "^6.3.8",
    "@types/sqlstring": "^2.3.0",
    "ajv": "^8.2.0",
    "async-wait-until": "^2.0.5",
    "commander": "^7.2.0",
    "cron-parser": "^3.5.0",
    "fastify": "^3.15.1",
    "fastify-cookie": "^5.3.0",
    "fastify-formbody": "^5.0.0",
    "fastify-multipart": "^4.0.5",
    "fastq": "^1.11.0",
    "fluent-json-schema": "^2.0.4",
    "handy-redis": "^2.2.1",
    "intl-messageformat": "^9.6.12",
    "lit-element": "^2.5.0",
    "lit-html": "^1.4.0",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.4",
    "minimist": "^1.2.5",
    "mssql": "^6.3.1",
    "mysql2": "^2.2.5",
    "node-schedule": "^2.0.0",
    "onchange": "^7.1.0",
    "pg": "^8.6.0",
    "pg-format": "^1.0.4",
    "pg-query-stream": "^4.1.0",
    "redis": "^3.1.2",
    "rollup": "^2.47.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-svgo": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sqlstring": "^2.3.2",
    "stream": "^0.0.2",
    "type-fest": "^1.0.2"
  },
  "description": "The Scola Library",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/chai": "^4.2.17",
    "@types/chai-subset": "^1.3.3",
    "@types/jest": "^26.0.23",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lit-analyzer": "^1.2.1",
    "semantic-release": "^17.4.2",
    "sinon": "^10.0.0",
    "ts-jest": "^26.5.5",
    "ts-lit-plugin": "^1.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintConfig": {
    "overrides": [
      {
        "extends": [
          "eslint:all",
          "standard",
          "./.eslint/js.json"
        ],
        "files": [
          "**/*.js"
        ]
      },
      {
        "extends": [
          "eslint:all",
          "standard",
          "plugin:@typescript-eslint/all",
          "standard-with-typescript",
          "./.eslint/js.json",
          "./.eslint/ts.json"
        ],
        "files": [
          "**/*.ts"
        ]
      }
    ]
  },
  "files": [
    ".docker",
    ".eslint",
    "bin",
    "dist",
    "types"
  ],
  "license": "MIT",
  "main": "./dist/server/cjs.js",
  "name": "@scola/lib",
  "prettier": {
    "htmlWhitespaceSensitivity": "ignore",
    "jsxBracketSameLine": false,
    "printWidth": 100,
    "semi": false,
    "trailingComma": "none"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "preset": "angular"
  },
  "repository": "github:scola84/lib",
  "scripts": {
    "exec": "onchange --initial --kill ./dist/server/cjs.js -- node ./dist/server/cjs.js",
    "lint": "tsc --project ./src/client && tsc --project ./src/server && tsc --project ./test/server && lit-analyzer ./src/client --strict && eslint ./bin ./src ./test",
    "make": "rollup --config ./bin/rollup.config.js --sourcemap",
    "test": "jest --preset ts-jest --runInBand --testRunner jest-circus/runner"
  },
  "types": "./types/index.d.ts",
  "version": "15.6.0"
}
