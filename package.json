    "readable-stream": "^3.6.0",
    "rollup": "^2.3.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-gzip": "^2.3.0",
    "rollup-plugin-livereload": "^1.1.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-uglify": "^6.0.4",
    "semantic-release": "^17.0.4"
  },
  "scripts": {
    "bundle": "rm -rf dist/* && rollup -c .rollup/config.cjs",
    "bundle:dev": "rm -rf dist/* && rollup -mw -c .rollup/config.cjs",
    "find": "git diff --staged --diff-filter=ACMR --name-only | grep -E '\\.(css|js)'",
    "lint": "eslint src",
    "lint:dev": "js-beautify -r $(yarn -s find) && eslint --fix $(yarn -s find) && git add $(yarn -s find)",
    "start": "node ${NODE_SCRIPT}",
    "start:dev": "./node_modules/nodemon/bin/nodemon.js -w ./ ${NODE_SCRIPT}",
    "test": "jest --bail",
    "test:dev": "jest --bail --findRelatedTests $(yarn -s find)"
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "helpers": false
        }
      ]
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gzip": {
    "additionalFiles": [
      "./dist/css/gui.css"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint:dev && yarn test:dev",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "nodemonConfig": {
    "ignoreRoot": [
      ".git"
    ]
  },
  "release": {
    "branches": [
      "master",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
